    background-color: var(--gold);
    padding: 96px 0;
    position: relative;
  }

  .host-grid {
    display: flex;
    align-items: center;
    gap: 64px;
    flex-wrap: wrap;
    position: relative;
    z-index: 10;
  }

  .host-image-wrapper {
    position: relative;
    flex-shrink: 0;
  }

  .host-image {
    width: 260px;
    height: 260px;
    object-fit: cover;
    object-position: center bottom;
    display: block;
    position: relative;
    z-index: 2;
    background-color: var(--teal-dark);
  }

  .host-image-frame {
    position: absolute;
    top: -12px;
    left: -12px;
    right: -12px;
    bottom: -12px;
    border: 4px solid var(--teal-dark);
    background-color: var(--teal-dark);
