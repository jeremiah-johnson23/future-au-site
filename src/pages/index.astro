  .hero-tagline {
    font-size: 20px;
    color: var(--teal-dark);
    max-width: 400px;
    line-height: 1.6;
    margin-bottom: 0;
  }

  /* ===== FORMAT SECTION ===== */
  .format-section {
    background-color: var(--cream);
    padding: 80px 24px;
    text-align: center;
    border-top: 1px solid rgba(10, 58, 58, 0.1);
  }

  .format-content {
    max-width: 700px;
    margin: 0 auto;
  }

  .format-label {
    font-size: 13px;
    font-weight: 700;
    letter-spacing: 0.2em;
    color: var(--teal-mid);
    margin-bottom: 24px;
  }

  .format-headline {
    font-family: 'Bebas Neue', sans-serif;
    font-size: clamp(32px, 5vw, 48px);
    line-height: 1;
    color: var(--teal-dark);
    margin-bottom: 24px;
  }

  .format-body {
    font-size: 18px;
    line-height: 1.7;
    color: var(--teal-dark);
    opacity: 0.85;
  }

  /* ===== SIGNUP SECTION ===== */
  .signup-section {
    background-color: var(--teal-dark);
    padding: 80px 24px;
    position: relative;
    overflow: hidden;
  }

  .signup-section::after {
    content: '';
    position: absolute;
    top: 0;
    left: 24px;
    width: 120px;
    height: 6px;
    background-color: var(--gold);
  }

  .signup-grid {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
  }

  .signup-copy {
    position: relative;
  }

  .signup-label {
    font-size: 13px;
    font-weight: 700;
    letter-spacing: 0.2em;
    color: var(--gold);
    margin-bottom: 24px;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .signup-label::after {
    content: '';
    flex: 1;
    max-width: 60px;
    height: 2px;
    background-color: var(--gold);
    opacity: 0.4;
  }

  .signup-headline {
    font-family: 'Bebas Neue', sans-serif;
    font-size: clamp(52px, 6vw, 80px);
    line-height: 0.92;
    color: var(--white);
    margin-bottom: 28px;
    letter-spacing: -0.01em;
  }

  .signup-headline .gold {
    color: var(--gold);
    display: block;
  }

  .signup-description {
    font-size: 17px;
    line-height: 1.7;
    color: var(--cream);
    max-width: 440px;
    opacity: 0.9;
  }

  .signup-description strong {
    color: var(--white);
    font-weight: 600;
  }

  .signup-action {
    position: relative;
  }

  .signup-action::before {
    content: '';
    position: absolute;
    top: -30px;
    right: -20px;
    width: 180px;
    height: 180px;
    background-color: var(--gold);
    opacity: 0.08;
    transform: rotate(-12deg);
    z-index: 0;
  }

  .signup-form-wrapper {
    position: relative;
    z-index: 1;
  }

  .signup-form {
    display: flex;
    margin-bottom: 32px;
  }

