    position: relative;
    overflow: hidden;
    background-color: var(--gold);
  }

  .hero-teal-diagonal {
    position: absolute;
    top: 0;
    right: 0;
    width: 55%;
    height: 100%;
    background-color: var(--teal-dark);
    clip-path: polygon(20% 0, 100% 0, 100% 100%, 0% 100%);
  }

  .hero-australia {
    position: absolute;
    top: 0;
    right: -5%;
    width: 65%;
    height: 100%;
