---
import BaseLayout from '../layouts/BaseLayout.astro';

const topics = [
  {
    question: "How will self driving cars change Jobs, Transport, and Cities in Australia?",
    image: "/images/topic-1.png",
  },
  {
    question: "Caring for Australia's Elderly: The Future of Aged Care",
    image: "/images/topic-2.png",
  },
  {
    question: "What is the future of Athlete influence in Australia?",
    image: "/images/topic-3.png",
  },
  {
    question: "Is Australia's pop culture future a mirror of the USA's?",
    image: "/images/topic-4.png",
  },
  {
    question: "How could Australia win the Olympics in 2032?",
    image: "/images/topic-5.png",
  },
  {
    question: "The Great Re-Education: Preparing Australians for Jobs That Don't Exist Yet",
    image: "/images/topic-6.png",
  },
];
---

<BaseLayout title="Home">
  <!-- Hero Section -->
  <section class="relative overflow-hidden py-20 md:py-32">
    <div class="max-w-6xl mx-auto px-6">
      <div class="flex flex-col lg:flex-row items-center gap-12">
        <div class="flex-1 text-center lg:text-left">
          <div class="inline-block bg-gold-500 text-teal-900 px-4 py-1 rounded-full text-sm font-semibold mb-6">
            Launching in 2025
          </div>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold mb-6 leading-tight">
            Building the Lucky Country 2.0
          </h1>
          <p class="text-xl text-cream-200 mb-8 max-w-xl mx-auto lg:mx-0">
            A podcast exploring the ideas, innovations, and decisions that will shape Australia's next 50 years.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <a
              href="#signup"
              class="bg-gold-500 text-teal-900 px-8 py-3 rounded-lg font-semibold hover:bg-gold-400 transition-colors"
            >
              Join the Mailing List
            </a>
            <a
              href="#topics"
              class="border border-cream-200 text-cream-100 px-8 py-3 rounded-lg font-semibold hover:bg-cream-100 hover:text-teal-900 transition-colors"
            >
              Explore Topics
            </a>
          </div>
        </div>
        <div class="flex-1 relative">
          <!-- Australia Map Graphic -->
          <div class="relative w-full max-w-md mx-auto">
            <svg viewBox="0 0 400 350" class="w-full h-auto">
              <!-- Simplified Australia outline with circuit board effect -->
              <defs>
                <linearGradient id="circuitGrad" x1="0%" y1="0%" x2="100%" y2="100%">
                  <stop offset="0%" style="stop-color:#f5c518;stop-opacity:0.8" />
                  <stop offset="100%" style="stop-color:#f5c518;stop-opacity:0.3" />
                </linearGradient>
              </defs>
              <!-- Australia shape -->
              <path
                d="M80,120 Q60,100 70,80 Q90,60 130,70 Q160,65 190,75 Q220,70 260,80 Q300,75 330,90 Q350,110 340,140 Q350,170 340,200 Q330,230 300,250 Q270,270 230,275 Q200,290 170,280 Q140,285 110,270 Q80,250 70,220 Q60,190 70,160 Q65,140 80,120 Z"
                fill="none"
                stroke="url(#circuitGrad)"
                stroke-width="2"
              />
              <!-- Circuit nodes -->
              <circle cx="100" cy="120" r="4" fill="#f5c518" class="animate-pulse" />
              <circle cx="180" cy="90" r="4" fill="#f5c518" class="animate-pulse" style="animation-delay: 0.2s" />
              <circle cx="260" cy="100" r="4" fill="#f5c518" class="animate-pulse" style="animation-delay: 0.4s" />
              <circle cx="320" cy="150" r="4" fill="#f5c518" class="animate-pulse" style="animation-delay: 0.6s" />
              <circle cx="280" cy="220" r="4" fill="#f5c518" class="animate-pulse" style="animation-delay: 0.8s" />
              <circle cx="180" cy="250" r="4" fill="#f5c518" class="animate-pulse" style="animation-delay: 1s" />
              <circle cx="100" cy="200" r="4" fill="#f5c518" class="animate-pulse" style="animation-delay: 1.2s" />
              <!-- Circuit lines -->
              <line x1="100" y1="120" x2="180" y2="90" stroke="#f5c518" stroke-width="1" opacity="0.5" />
              <line x1="180" y1="90" x2="260" y2="100" stroke="#f5c518" stroke-width="1" opacity="0.5" />
              <line x1="260" y1="100" x2="320" y2="150" stroke="#f5c518" stroke-width="1" opacity="0.5" />
              <line x1="320" y1="150" x2="280" y2="220" stroke="#f5c518" stroke-width="1" opacity="0.5" />
              <line x1="280" y1="220" x2="180" y2="250" stroke="#f5c518" stroke-width="1" opacity="0.5" />
              <line x1="180" y1="250" x2="100" y2="200" stroke="#f5c518" stroke-width="1" opacity="0.5" />
              <line x1="100" y1="200" x2="100" y2="120" stroke="#f5c518" stroke-width="1" opacity="0.5" />
              <!-- Inner connections -->
              <line x1="180" y1="90" x2="180" y2="250" stroke="#f5c518" stroke-width="1" opacity="0.3" />
              <line x1="100" y1="160" x2="280" y2="160" stroke="#f5c518" stroke-width="1" opacity="0.3" />
            </svg>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Topics Section -->
  <section id="topics" class="bg-cream-100 py-20">
    <div class="max-w-6xl mx-auto px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-display font-bold mb-4 text-teal-900">What We'll Explore</h2>
        <p class="text-teal-800 max-w-2xl mx-auto">
          Deep conversations with the people building, researching, and imagining Australia's future.
        </p>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {topics.map((topic) => (
          <div class="group relative overflow-hidden rounded-xl bg-teal-800 aspect-square">
            <img
              src={topic.image}
              alt={topic.question}
              class="absolute inset-0 w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-teal-950 via-teal-900/30 to-transparent z-10" />
            <div class="absolute bottom-0 left-0 right-0 p-6 z-20">
              <h3 class="text-lg font-display font-semibold text-white group-hover:text-gold-500 transition-colors leading-tight">
                {topic.question}
              </h3>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Host Section -->
  <section id="host" class="bg-gold-500 py-20">
    <div class="max-w-6xl mx-auto px-6">
      <div class="flex flex-col md:flex-row items-center gap-12">
        <div class="flex-shrink-0">
          <img
            src="/images/headshot.png"
            alt="Simon Murphy"
            class="w-48 h-48 md:w-64 md:h-64 rounded-full object-cover border-4 border-teal-900"
          />
        </div>
        <div class="text-center md:text-left">
          <span class="text-teal-800 font-semibold text-sm uppercase tracking-wide">Your Host</span>
          <h2 class="text-3xl md:text-4xl font-display font-bold text-teal-900 mt-2 mb-4">Simon Murphy</h2>
          <p class="text-teal-800 text-lg leading-relaxed">
            Simon Murphy is a founder, investor, and chronic over-thinker about Australia's potential. He started Future AU because he believes we could lead the world in more than just sport - and wants to talk to the people that have a bold vision for the country.
          </p>
          <div class="mt-6 flex gap-4 justify-center md:justify-start">
            <a
              href="https://www.linkedin.com/in/simon-j-murphy/"
              target="_blank"
              rel="noopener"
              class="text-teal-900 hover:text-teal-700 transition-colors font-semibold"
            >
              LinkedIn
            </a>
            <span class="text-teal-700">|</span>
            <a
              href="https://extractingideas.substack.com/"
              target="_blank"
              rel="noopener"
              class="text-teal-900 hover:text-teal-700 transition-colors font-semibold"
            >
              Substack
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact/Signup Section -->
  <section id="contact" class="bg-cream-100 py-20">
    <div class="max-w-3xl mx-auto px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-display font-bold mb-4 text-teal-900">Get Involved</h2>
        <p class="text-teal-700">
          Have a topic suggestion? Want to sponsor the show? Get in touch.
        </p>
      </div>
      <form class="space-y-6">
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <label for="name" class="block text-sm font-medium text-teal-800 mb-2">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              class="w-full px-4 py-3 rounded-lg bg-white border border-cream-300 text-teal-900 placeholder-teal-400 focus:outline-none focus:ring-2 focus:ring-gold-500 focus:border-transparent"
              placeholder="Your name"
            />
          </div>
          <div>
            <label for="email" class="block text-sm font-medium text-teal-800 mb-2">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="w-full px-4 py-3 rounded-lg bg-white border border-cream-300 text-teal-900 placeholder-teal-400 focus:outline-none focus:ring-2 focus:ring-gold-500 focus:border-transparent"
              placeholder="you@example.com"
            />
          </div>
        </div>
        <div>
          <label for="type" class="block text-sm font-medium text-teal-800 mb-2">I'm interested in...</label>
          <select
            id="type"
            name="type"
            class="w-full px-4 py-3 rounded-lg bg-white border border-cream-300 text-teal-900 focus:outline-none focus:ring-2 focus:ring-gold-500 focus:border-transparent"
          >
            <option value="mailing">Joining the mailing list</option>
            <option value="topic">Suggesting a topic</option>
            <option value="sponsor">Sponsorship opportunities</option>
            <option value="other">Something else</option>
          </select>
        </div>
        <div>
          <label for="message" class="block text-sm font-medium text-teal-800 mb-2">Message</label>
          <textarea
            id="message"
            name="message"
            rows="4"
            class="w-full px-4 py-3 rounded-lg bg-white border border-cream-300 text-teal-900 placeholder-teal-400 focus:outline-none focus:ring-2 focus:ring-gold-500 focus:border-transparent"
            placeholder="Your message..."
          ></textarea>
        </div>
        <button
          type="submit"
          class="w-full bg-teal-900 text-white px-8 py-3 rounded-lg font-semibold hover:bg-teal-800 transition-colors"
        >
          Send Message
        </button>
      </form>
    </div>
  </section>

  <!-- Mailing List CTA -->
  <section id="signup" class="bg-teal-950 py-16">
    <div class="max-w-3xl mx-auto px-6 text-center">
      <h2 class="text-2xl md:text-3xl font-display font-bold mb-4">Don't Miss an Episode</h2>
      <p class="text-cream-200 mb-8">
        Be the first to know when Future AU launches. Join the mailing list for early access and exclusive content.
      </p>
      <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto">
        <input
          type="email"
          placeholder="Enter your email"
          class="flex-1 px-4 py-3 rounded-lg bg-teal-800 border border-teal-700 text-white placeholder-teal-500 focus:outline-none focus:ring-2 focus:ring-gold-500 focus:border-transparent"
        />
        <button
          type="submit"
          class="bg-gold-500 text-teal-900 px-6 py-3 rounded-lg font-semibold hover:bg-gold-400 transition-colors whitespace-nowrap"
        >
          Subscribe
        </button>
      </form>
    </div>
  </section>
</BaseLayout>
