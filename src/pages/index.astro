  }

  .hero-australia img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center 40%;
  }

  .hero-content {
    position: relative;
    z-index: 10;
    max-width: 1200px;
    margin: 0 auto;
    padding: 140px 24px 80px;
  }

  .launch-badge {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 32px;
  }

  .launch-line {
    width: 48px;
    height: 4px;
    background-color: var(--teal-dark);
  }

  .launch-text {
    font-size: 14px;
    font-weight: 700;
    letter-spacing: 0.2em;
    color: var(--teal-dark);
  }

  .hero-headline {
    font-family: 'Bebas Neue', sans-serif;
    margin-bottom: 32px;
  }

  .hero-headline span {
    display: block;
    font-size: clamp(56px, 11vw, 130px);
    line-height: 0.9;
    color: var(--teal-dark);
  }

  .headline-with-badge {
    display: flex !important;
    align-items: baseline;
    flex-wrap: wrap;
  }

  .badge-2 {
    display: inline-block !important;
    background-color: var(--gold);
    color: var(--teal-dark);
    padding: 4px 16px;
    margin-left: 16px;
    transform: rotate(-2deg);
    font-size: 0.45em !important;
    position: relative;
    z-index: 10;
    border: 3px solid var(--teal-dark);
