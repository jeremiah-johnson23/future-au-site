    padding: 20px 36px;
    background-color: var(--gold);
    color: var(--teal-dark);
    font-weight: 700;
    font-size: 15px;
    letter-spacing: 0.12em;
    border: none;
    cursor: pointer;
    font-family: inherit;
    transition: background-color 0.3s ease, transform 0.2s ease;
    white-space: nowrap;
  }

  .signup-button:hover {
    background-color: var(--gold-hover);
    transform: translateX(2px);
  }

  .signup-preview {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 16px;
  }

  .preview-item {
    padding: 20px;
    background-color: rgba(21, 107, 107, 0.15);
    border-left: 3px solid var(--gold);
    transition: background-color 0.3s ease;
  }

  .preview-item:hover {
    background-color: rgba(21, 107, 107, 0.25);
  }

  .preview-number {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 28px;
    color: var(--gold);
    line-height: 1;
    margin-bottom: 6px;
  }

  .preview-text {
    font-size: 13px;
    font-weight: 500;
    color: var(--cream);
    line-height: 1.4;
    letter-spacing: 0.02em;
  }

  .signup-trust {
    margin-top: 20px;
    font-size: 12px;
    color: var(--teal-light);
    letter-spacing: 0.05em;
  }

  .form-message {
    margin-top: 12px;
    font-size: 14px;
    font-weight: 600;
    letter-spacing: 0.05em;
    min-height: 20px;
  }

  .form-message--success {
    color: var(--gold);
  }

  .form-message--error {
    color: #ff6b6b;
  }


  /* ===== TOPICS ===== */
  .topics {
    background-color: var(--cream);
    padding: 96px 0;
    position: relative;
  }

  .topics-bar {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background-color: var(--gold);
  }

  .topics-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: 64px;
    flex-wrap: wrap;
    gap: 24px;
  }

  .section-number-row {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 16px;
  }

  .section-number {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 72px;
    font-weight: 700;
    color: var(--gold);
    line-height: 1;
  }

  .section-line {
    width: 64px;
    height: 4px;
    background-color: var(--teal-dark);
  }

  .section-line--gold {
    background-color: var(--gold);
  }

  .section-title {
    font-family: 'Bebas Neue', sans-serif;
    font-size: clamp(48px, 8vw, 80px);
    line-height: 0.9;
    color: var(--teal-dark);
  }

  .section-title--light {
