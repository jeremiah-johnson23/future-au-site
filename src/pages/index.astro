---
import BaseLayout from '../layouts/BaseLayout.astro';

const topics = [
  {
    number: "01",
    question: "How will self-driving cars change Jobs, Transport, and Cities?",
    category: "MOBILITY",
    image: "/images/topic-1.png",
  },
  {
    number: "02",
    question: "Caring for Australia's Elderly: The Future of Aged Care",
    category: "HEALTHCARE",
    image: "/images/topic-2.png",
  },
  {
    number: "03",
    question: "What is the future of Athlete influence in Australia?",
    category: "SPORT & CULTURE",
    image: "/images/topic-3.png",
  },
  {
    number: "04",
    question: "Is Australia's pop culture future a mirror of the USA's?",
    category: "IDENTITY",
    image: "/images/topic-4.png",
  },
  {
    number: "05",
    question: "How could Australia win the Olympics in 2032?",
    category: "AMBITION",
    image: "/images/topic-5.png",
  },
  {
    number: "06",
    question: "Preparing Australians for Jobs That Don't Exist Yet",
    category: "EDUCATION",
    image: "/images/topic-6.png",
  },
];
---

<BaseLayout title="Home">
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-teal-diagonal"></div>

    <!-- Floating particles -->
    <div class="hero-particles" aria-hidden="true">
      <div class="particle particle--1"></div>
      <div class="particle particle--2"></div>
      <div class="particle particle--3"></div>
      <div class="particle particle--4"></div>
      <div class="particle particle--5"></div>
      <div class="particle particle--6"></div>
      <div class="particle particle--7"></div>
      <div class="particle particle--8"></div>
    </div>

    <!-- Australia graphic on gold side -->
    <div class="hero-australia">
      <video src="/videos/hero-circuit.mp4" autoplay loop muted playsinline aria-hidden="true"></video>
    </div>

    <div class="hero-content">
      <!-- Launch badge -->
      <div class="launch-badge">
        <span class="launch-line"></span>
        <span class="launch-text">LAUNCHING 2026</span>
      </div>
      
      <!-- Main headline -->
      <h1 class="hero-headline">
        <span>BUILDING</span>
        <span>THE LUCKY</span>
        <span class="headline-with-badge">
          COUNTRY
          <span class="badge-2">2.0</span>
        </span>
      </h1>
      
      <!-- Tagline -->
      <p class="hero-tagline">
        Bold conversations with the people reimagining Australia's future.
      </p>
      
    </div>
  </section>

  <!-- Signup Section -->
  <section class="signup-section">
    <div class="signup-section-inner">
      <div class="signup-left">
        <div class="signup-header">
          <div class="signup-icon">✉</div>
          <span class="signup-label">GET THE INSIDE STORY</span>
        </div>
        <p class="signup-desc">
          Before each episode drops, 4 graphs hit social. The rest? Bonus analysis, extra data, and the research that shaped the conversation. That part's just for subscribers.
        </p>

        <!-- Stacked slide card mockup -->
        <div class="slide-stack">
          <div class="slide-card slide-card--back2">
            <div class="slide-card-inner slide-card-inner--blurred">
              <div class="slide-bar slide-bar--tall"></div>
              <div class="slide-bar slide-bar--mid"></div>
              <div class="slide-bar slide-bar--short"></div>
              <div class="slide-bar slide-bar--tall"></div>
              <div class="slide-overlay">
                <span>SUBSCRIBERS ONLY</span>
              </div>
            </div>
          </div>
          <div class="slide-card slide-card--back1">
            <div class="slide-card-inner slide-card-inner--blurred">
              <div class="slide-bar slide-bar--short"></div>
              <div class="slide-bar slide-bar--tall"></div>
              <div class="slide-bar slide-bar--mid"></div>
              <div class="slide-bar slide-bar--short"></div>
              <div class="slide-overlay">
                <span>SUBSCRIBERS ONLY</span>
              </div>
            </div>
          </div>
          <div class="slide-card slide-card--front">
            <div class="slide-card-inner">
              <div class="slide-card-header">
                <div class="slide-avatar"></div>
                <div class="slide-meta">
                  <div class="slide-name"></div>
                  <div class="slide-date"></div>
                </div>
              </div>
              <div class="slide-chart">
                <div class="slide-bar slide-bar--short"></div>
                <div class="slide-bar slide-bar--tall"></div>
                <div class="slide-bar slide-bar--mid"></div>
                <div class="slide-bar slide-bar--tall"></div>
              </div>
              <div class="slide-card-label">1 of 4 public slides</div>
            </div>
          </div>
        </div>
      </div>
      <div class="signup-right">
        <form class="signup-form" id="signup-form-top">
          <input type="email" placeholder="your@email.com" class="signup-input" required />
          <div style="position:absolute;left:-9999px;" aria-hidden="true">
            <input type="text" name="website" tabindex="-1" autocomplete="off" />
          </div>
          <button type="submit" class="signup-button">JOIN →</button>
        </form>
        <div class="form-message" id="signup-top-message"></div>
      </div>
    </div>
  </section>

  <!-- Topics Section -->
  <section id="topics" class="topics">
    <div class="topics-bar"></div>
    <div class="container">
      <div class="topics-header">
        <div class="topics-title-group">
          <h2 class="section-title">WHAT WE'RE<br/>EXPLORING</h2>
        </div>
      </div>
      
      <div class="topics-grid">
        {topics.map((topic, index) => (
          <article class={`topic-card ${index === 0 ? 'topic-card--large' : ''}`}>
            <div class="topic-image-container">
              <img src={topic.image} alt={topic.question} class="topic-image" />
              <div class="topic-number-badge">
                <span>{topic.number}</span>
              </div>
              <div class="topic-category-badge">
                <span>{topic.category}</span>
              </div>
              <div class="topic-gradient"></div>
              <div class="topic-content">
                <h3 class="topic-title">{topic.question}</h3>
              </div>
              <div class="topic-gold-bar"></div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Host Section -->
  <section id="host" class="host">
    <div class="host-teal-diagonal"></div>
    <div class="container">
      <div class="host-grid">
        <div class="host-image-wrapper">
          <img src="/images/headshot.png" alt="Simon Murphy" class="host-image" />
          <div class="host-image-frame"></div>
        </div>
        
        <div class="host-content">
          <div class="host-label-row">
            <span class="host-line"></span>
            <span class="host-label">YOUR HOST</span>
          </div>
          <h2 class="host-name">SIMON<br/>MURPHY</h2>
          <p class="host-bio">
            Founder, strategist, and someone who thinks Australia punches below its weight. Future AU exists to find the people with bold ideas about where this country could go, and give them a microphone.
          </p>
          <div class="host-links">
            <a href="https://www.linkedin.com/in/simon-j-murphy/" target="_blank" rel="noopener" class="host-link">LINKEDIN →</a>
            <a href="https://extractingideas.substack.com/" target="_blank" rel="noopener" class="host-link">SUBSTACK →</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="contact">
    <div class="container">
      <div class="contact-grid">
        <div class="contact-header">
          <h2 class="section-title section-title--light">GET IN<br/>TOUCH</h2>
          <p class="contact-desc">
            Got a topic we should cover? Want to sponsor? Know someone we should talk to? Let's hear it.
          </p>
        </div>
        
        <form class="contact-form" id="contact-form">
          <div class="form-row">
            <div class="form-group">
              <label for="contact-name" class="form-label">NAME</label>
              <input type="text" id="contact-name" name="name" placeholder="Your name" class="form-input" required />
            </div>
            <div class="form-group">
              <label for="contact-email" class="form-label">EMAIL</label>
              <input type="email" id="contact-email" name="email" placeholder="your@email.com" class="form-input" required />
            </div>
          </div>
          <div class="form-group">
            <label for="contact-type" class="form-label">ENQUIRY TYPE</label>
            <select id="contact-type" name="type" class="form-input form-select">
              <option value="topic">Suggest a topic</option>
              <option value="guest">Recommend a guest</option>
              <option value="sponsor">Sponsorship</option>
              <option value="other">Something else</option>
            </select>
          </div>
          <div class="form-group">
            <label for="contact-message" class="form-label">MESSAGE</label>
            <textarea id="contact-message" name="message" rows="4" placeholder="What's on your mind?" class="form-input form-textarea" required></textarea>
          </div>
          <div style="position:absolute;left:-9999px;" aria-hidden="true">
            <input type="text" name="website" tabindex="-1" autocomplete="off" />
          </div>
          <button type="submit" class="form-submit">SEND IT →</button>
          <div class="form-message" id="contact-message-el"></div>
        </form>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section id="signup" class="final-cta">
    <div class="cta-gold-bg"></div>
    <div class="cta-teal-diagonal"></div>
    
    <div class="cta-content">
      <h2 class="cta-headline">
        <span class="cta-headline-gold">DON'T JUST LISTEN.</span>
        <span class="cta-headline-teal">GET THE FULL STORY.</span>
      </h2>
      <p class="cta-desc">
        Every episode email includes extended show notes, bonus insights, and the stuff that didn't make the final cut.
      </p>
      <form class="cta-form" id="signup-form-bottom">
        <input type="email" placeholder="your@email.com" class="cta-input" required />
        <div style="position:absolute;left:-9999px;" aria-hidden="true">
          <input type="text" name="website" tabindex="-1" autocomplete="off" />
        </div>
        <button type="submit" class="cta-button">I'M IN</button>
      </form>
      <div class="form-message cta-message" id="signup-bottom-message"></div>
    </div>
  </section>
</BaseLayout>

<script>
  function handleSubscribe(form, messageEl) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const btn = form.querySelector('button[type="submit"]');
      const originalText = btn.textContent;
      btn.disabled = true;
      btn.textContent = '...';
      messageEl.textContent = '';
      messageEl.className = 'form-message';

      try {
        const formData = new FormData(form);
        const emailInput = form.querySelector('input[type="email"]');
        formData.set('email', emailInput.value);

        const res = await fetch('/api/subscribe', { method: 'POST', body: formData });
        const data = await res.json();

        if (data.ok) {
          messageEl.textContent = data.message || "You're in.";
          messageEl.classList.add('form-message--success');
          emailInput.value = '';
        } else {
          messageEl.textContent = data.error || 'Something went wrong.';
          messageEl.classList.add('form-message--error');
        }
      } catch {
        messageEl.textContent = 'Something went wrong. Try again.';
        messageEl.classList.add('form-message--error');
      } finally {
        btn.disabled = false;
        btn.textContent = originalText;
      }
    });
  }

  // Wire up both signup forms
  const topForm = document.getElementById('signup-form-top');
  const topMsg = document.getElementById('signup-top-message');
  if (topForm && topMsg) handleSubscribe(topForm, topMsg);

  const bottomForm = document.getElementById('signup-form-bottom');
  const bottomMsg = document.getElementById('signup-bottom-message');
  if (bottomForm && bottomMsg) handleSubscribe(bottomForm, bottomMsg);

  // Contact form
  const contactForm = document.getElementById('contact-form');
  const contactMsg = document.getElementById('contact-message-el');
  if (contactForm && contactMsg) {
    contactForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      const btn = contactForm.querySelector('button[type="submit"]');
      const originalText = btn.textContent;
      btn.disabled = true;
      btn.textContent = 'SENDING...';
      contactMsg.textContent = '';
      contactMsg.className = 'form-message';

      try {
        const formData = new FormData(contactForm);
        const res = await fetch('/api/contact', { method: 'POST', body: formData });
        const data = await res.json();

        if (data.ok) {
          contactMsg.textContent = data.message || 'Message sent.';
          contactMsg.classList.add('form-message--success');
          contactForm.reset();
        } else {
          contactMsg.textContent = data.error || 'Something went wrong.';
          contactMsg.classList.add('form-message--error');
        }
      } catch {
        contactMsg.textContent = 'Something went wrong. Try again.';
        contactMsg.classList.add('form-message--error');
      } finally {
        btn.disabled = false;
        btn.textContent = originalText;
      }
    });
  }
</script>

<style>
